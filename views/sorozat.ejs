</head>
<body>
<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>

<!-- Header section -->
<header class="header-section">
    <div class="container">
        <!-- logo -->
        <a class="" href="/oldal/0">
            <img src="/img/mozi4.png" alt="" style="height: 30%; width: 30%">
        </a>
        <div class="user-panel">
            <a href="#">Login</a> / <a href="#">Register</a>
        </div>
        <!-- responsive -->
        <div class="nav-switch">
            <i class="fa fa-bars"></i>
        </div>
        <!-- site menu -->
        <nav class="main-menu">
            <ul>
                <li><a href="/oldal/0">Főoldal</a></li>
                <li><a href="/online-filmek/0">Filmek</a></li>
                <li><a href="/online-sorozatok/0">Sorozatok</a></li>
                <li><a href="/">Kapcsolat</a></li>
            </ul>
        </nav>
    </div>
</header>
<!-- Header section end -->

<form action="/search/">
    <div class="row" style="margin-top: 50px;">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Ide írd be a sorozat/film nevét amit keresel!"
                       aria-label="Ide írd be a sorozat/film nevét amit keresel, az aposztrofokat hagyd ki!"
                       aria-describedby="basic-addon2" name="item">
                <select name="kategoria">
                    <option value="film">FILM</option>
                    <option value="sorozat">SOROZAT</option>
                </select>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" value="Submit">Keresés</button>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</form>


<!-- Page section -->
<section class="page-section review-page spad">

    <div class="container">
        <h4> <%= title %> </h4>
        <h8> <%= original_title %></h8>
        <div class="rating">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="review-item">
                    <div class="review-text">

                        <img src= <%= image_url %> style="width: 240px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="review-item">
                    <div class="row align-items-center">
                        <div class="col">
                            <b>Kategória: </b>
                            <%=                             %> <br>
                            <% if (responsePayload.sql_kat_res ) { %>
                                <% for (let i = 0; i < responsePayload.sql_kat_res.length; i++) { %>
                                    <% if (i == responsePayload.sql_kat_res.length - 1) { %>
                                        <%= responsePayload.sql_kat_res[i].name %>
                                    <% } else { %>
                                        <%= responsePayload.sql_kat_res[i].name %>,
                                    <% } %>
                                <% } %>
                            <% } %>
                            <br><br>
                            <b>RÖVID LEÍRÁS: </b>
                            <p><%= description %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="col">
                    <h5>ADATOK: </h5> <br><br>
                    <b>Játékidő: </b><br>
                    <p><%= play_time %> </p>
                    <b>Rendező: </b><br>
                    <%= dir_name %> <br><br>
                    <b>Szereplők: </b><br>
                    <% if (responsePayload.sql_act_res) { %>
                        <% for (let i = 0; i < responsePayload.sql_act_res.length; i++) { %>
                            <% if (i == responsePayload.sql_act_res.length - 1) { %>
                                <%= responsePayload.sql_act_res[i].name %>
                            <% } else { %>
                                <%= responsePayload.sql_act_res[i].name %>,
                            <% } %>
                        <% } %>
                    <% } %>
                    <br><br>
                    <p><b> TRAILER/IMDB LINKEK: </b></p>
                    <a href=<%= trailer_url %>><img src="/img/yt2.jpg" style="width: 70px; height: 50px"></a>
                    <a href=<%= imdb_url %>><img src="/img/imdb.jpg" style="width: 60px; height: 40px">
                        <p><b>IMDB: <%= imdb_score %></b></p></a>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="col-md-offset-1 panel panel-default">
                <br>
                <div class="panel-heading"><h4>Itt találod a linkeket!</h4></div>
                <%
                let resz_szam = null;
                let ep_num = null;
                let lnk = null;
                let last_ep_num = null;
                let last_resz_szam = null;
                let link_array = [];
                let las_arr = 0;
                let tarhely;
                let nyelv;
                let minoseg;

                for (let j = 0; j < responsePayload.sql_linkek.length; j++) {
                    resz_szam = responsePayload.sql_linkek[j].epizod_cim.substr(0, responsePayload.sql_linkek[j].epizod_cim.indexOf(' '));
                    ep_num = responsePayload.sql_linkek[j].series_episodes_id;
                    lnk = responsePayload.sql_linkek[j].link;
                    tarhely = responsePayload.sql_linkek[j].tarhely;
                    nyelv = responsePayload.sql_linkek[j].nyelv;
                    minoseg = responsePayload.sql_linkek[j].minoseg;

                    if (last_ep_num == ep_num || last_resz_szam == resz_szam) {
                        console.log('if ben');
                        link_array[las_arr].push({lnk, tarhely, nyelv, minoseg});
                    } else {
                        if (j == 0) {
                            console.log(las_arr);
                            last_ep_num = ep_num;
                            last_resz_szam = resz_szam;
                            link_array[0] = [];
                            link_array[0].push({lnk, tarhely, nyelv, minoseg});
                        } else {
                            console.log('else ben');
                            console.log(las_arr);
                            las_arr++;
                            inn_arr = 0;
                            link_array[las_arr] = [];
                            link_array[las_arr].push({lnk, tarhely, nyelv, minoseg});
                            ast_ep_num = ep_num;
                            last_resz_szam = resz_szam;
                        }
                    }
                }

                console.log(link_array);
                %>
                <% for (let k = 0; k < link_array.length; k++) { %>
                    <% let ep_btn = 'epbtn' + k; %>
                    <p>
                        <a data-toggle="collapse" href=<%= '#' + ep_btn %> role="button"
                           aria-expanded="false" aria-controls=>
                            <button class="btn btn-primary" data-toggle="collapse" data-mediatype="mv"
                                    class="clickable"> <%= k + 1 %>. epizód
                            </button>
                        </a>
                    </p>
                    <div class="collapse" id=<%= ep_btn %>>
                        <div class="table-responsive">
                            <table class="table table-striped" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th>Tárhely</th>
                                    <th>Nyelv</th>
                                    <th>Minőség</th>
                                    <th class="text-center">Indítás</th>
                                    <th class="text-center">Hiba jelentése</th>
                                    <th>Like</th>
                                    <th>Dislike</th>
                                </tr>
                                </thead>
                                <% let plybtn; %>
                                <% if (link_array && link_array[k]) { %>
                                    <% for (let i = 0; i < link_array[k].length; i++) { %>
                                        <%
                                            /*
                                            console.log('hossz: ');
                                            console.log(link_array[k].length);
                                            console.log('tarhely');
                                            console.log(link_array[k][i].tarhely);
                                            console.log('nyelv');
                                            console.log(link_array[k][i].nyelv);
                                            console.log('minoseg');
                                            console.log(link_array[k][i].minoseg);
                                            console.log('lnk');
                                            console.log(link_array[k][i].lnk);
                                            */
                                        %>
                                        <% plybtn = 'playbtn' + k + i %>

                                <tbody>
                                <tr>
                                    <td><%= link_array[k][i].minoseg %></td>
                                    <td><%= link_array[k][i].nyelv %></td>
                                    <td><%= link_array[k][i].tarhely %></td>
                                    <td class="text-center">
                                        <p>
                                            <a data-toggle="collapse" href=<%= '#' + plybtn %> role="button"
                                               aria-expanded="false" aria-controls=>
                                                <img src="/img/ply_btn2.png" style="width: 30px; height: 30px"
                                                     data-toggle="collapse" data-mediatype="mv" class="clickable">
                                            </a>
                                        </p>
                                        <div class="collapse" id=<%= plybtn %>>
                                            <% let encoded = Buffer.from(link_array[k][i].lnk).toString('base64');
                                                let enc2 = 'http://localhost:3000/open/' + encoded;
                                            %>

                                            <!--<iframe id="MainPopupIframe" class="mpi embed-responsive-item" src=<%= link_array[k][i].lnk %> controls="1" frameborder="1" allowfullscreen=""></iframe>-->
                                            <a target="_blank" rel="noopener noreferrer" href=<%= enc2 %>><img
                                                        src="/img/soyboy.png" height="200px" width="300px"></a>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <% } %>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>

        <!-- LINKEK -->

        <div class="text-center pt-4">
            <button class="site-btn btn-sm">Load More</button>
        </div>
    </div>
</section>
<!-- Page section end -->

